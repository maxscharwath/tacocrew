// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model Cart {
  id             String   @id @default(uuid())
  csrfToken      String
  cookies        String // JSON string
  createdAt      DateTime @default(now())
  lastActivityAt DateTime @default(now()) @updatedAt
  metadata       String? // JSON string for optional metadata

  // Relations
  tacoMappings TacoMapping[]
  orders       Order[]
  groupOrders  GroupOrder[]  @relation("GroupOrderSession")

  @@index([lastActivityAt])
  @@map("carts")
}

model TacoMapping {
  id           String @id @default(uuid())
  cartId       String
  tacoId       String
  backendIndex Int

  // Relations
  cart Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@unique([cartId, tacoId])
  @@unique([cartId, backendIndex])
  @@index([cartId])
  @@map("taco_mappings")
}

model User {
  id              String   @id @default(uuid())
  name            String
  email           String
  emailVerified   Boolean  @default(false)
  image           String?
  phone           String? // Phone number for reimbursement (Twint in Switzerland)
  username        String?  @unique // Unique username identifier
  language        String?  @default("en") // User language preference for i18n (en, fr, de)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt

  // Better Auth relations
  sessions Session[]
  accounts Account[]

  // Existing relations
  orders               Order[]               @relation("UserOrders")
  groupOrders          GroupOrder[]          @relation("GroupOrderLeader")
  userOrders           UserOrder[]           @relation("UserUserOrders")
  markedReimbursements UserOrder[]           @relation("UserOrderReimbursedBy")
  markedPayments       UserOrder[]           @relation("UserOrderPaidBy")
  deliveryProfiles     UserDeliveryProfile[]
  pushSubscriptions    PushSubscription[]
  notifications        Notification[]

  passkeys Passkey[]

  // Organization relations
  organizations UserOrganization[]

  @@unique([email])
  @@index([username])
  @@map("users")
}

model UserDeliveryProfile {
  id           String   @id @default(uuid())
  userId       String
  label        String?
  contactName  String
  phone        String
  deliveryType String // 'livraison' or 'emporter'
  road         String
  houseNumber  String?
  postcode     String
  city         String
  state        String?
  country      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([id, userId])
  @@index([userId])
  @@map("user_delivery_profiles")
}

model Order {
  id            String   @id @default(uuid())
  cartId        String
  userId        String? // Link to user if authenticated
  customerName  String
  customerPhone String
  orderType     String // 'livraison' or 'emporter'
  address       String?
  requestedFor  String // Time slot
  status        String   @default("pending")
  price         Float?
  orderData     String // JSON string
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  // Relations
  cart Cart  @relation(fields: [cartId], references: [id])
  user User? @relation("UserOrders", fields: [userId], references: [id], onDelete: SetNull)

  @@index([cartId])
  @@index([userId])
  @@index([createdAt])
  @@map("orders")
}

model GroupOrder {
  id             String   @id @default(uuid())
  name           String?
  leaderId       String // User ID of the group leader
  organizationId String? // Organization ID for filtering
  startDate      DateTime
  endDate        DateTime
  status         String   @default("open") // open, closed, submitted, completed
  sessionId      String? // Session ID for order verification (links to Cart)
  fee            Float? // Difference between backend total price and computed price (for reimbursement calculation)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt

  // Relations
  leader       User          @relation("GroupOrderLeader", fields: [leaderId], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  userOrders   UserOrder[]
  session      Cart?         @relation("GroupOrderSession", fields: [sessionId], references: [id], onDelete: SetNull)

  @@index([leaderId])
  @@index([organizationId])
  @@index([startDate, endDate])
  @@index([status])
  @@index([sessionId])
  @@map("group_orders")
}

model UserOrder {
  // Identity
  id           String @id @default(uuid())
  groupOrderId String

  // User
  userId String // User ID instead of username

  // Metadata
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now()) @updatedAt
  reimbursed     Boolean   @default(false)
  reimbursedAt   DateTime?
  reimbursedById String?
  paidByUser     Boolean   @default(false)
  paidByUserAt   DateTime?
  paidByUserId   String?

  // Order Data
  // JSON structure: { tacos: Taco[], extras: Extra[], drinks: Drink[], desserts: Dessert[] }
  // Each taco includes: id, size, meats[], sauces[], garnitures[], note?, quantity, price, tacoIdHex?
  // Using Prisma Json type for automatic parsing/serialization and better type safety
  items Json

  // Denormalized: JSON array of SHA-256 taco IDs in hex format ["hash1", "hash2", ...]
  // Computed automatically when items are created/updated. Used for efficient queries:
  // - Find orders containing a specific taco recipe
  // - Group orders by taco ID
  // - Query using JSON functions: json_each() or json_array_length()
  // Using Prisma Json type for automatic array handling
  tacoIdsHex Json?

  // Relations
  groupOrder    GroupOrder @relation(fields: [groupOrderId], references: [id], onDelete: Cascade)
  user          User       @relation("UserUserOrders", fields: [userId], references: [id], onDelete: Cascade)
  reimbursedBy  User?      @relation("UserOrderReimbursedBy", fields: [reimbursedById], references: [id], onDelete: SetNull)
  paidByUserRef User?      @relation("UserOrderPaidBy", fields: [paidByUserId], references: [id], onDelete: SetNull)

  // Indexes optimized for common query patterns
  // Get all orders in a group
  // Get all orders for a user
  // Get user's order in specific group
  // User history sorted by date (common query)
  @@index([groupOrderId])
  @@index([userId])
  @@index([groupOrderId, userId])
  @@index([userId, createdAt])
  @@index([reimbursed])
  @@index([reimbursedById])
  @@index([paidByUser])
  @@index([paidByUserId])
  @@map("user_orders")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Passkey {
  id           String    @id
  name         String?
  publicKey    String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialID String
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String?
  createdAt    DateTime?
  aaguid       String?

  @@map("passkey")
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

model Notification {
  id         String    @id @default(uuid())
  userId     String
  type       String // payment_reminder, payment_update, reimbursement, order_submitted, etc.
  title      String
  body       String
  url        String?
  data       Json? // Additional context (groupOrderId, userOrderId, etc.)
  read       Boolean   @default(false)
  readAt     DateTime?
  archived   Boolean   @default(false)
  archivedAt DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, read])
  @@index([userId, archived])
  @@index([createdAt])
  @@map("notifications")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  image     String? // Base64-encoded avatar image
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Relations
  users       UserOrganization[]
  groupOrders GroupOrder[]

  @@index([name])
  @@map("organizations")
}

enum OrganizationRole {
  ADMIN
  MEMBER
}

enum OrganizationMemberStatus {
  PENDING
  ACTIVE
}

model UserOrganization {
  userId         String
  organizationId String
  role           OrganizationRole        @default(MEMBER)
  status         OrganizationMemberStatus @default(PENDING)
  createdAt      DateTime                @default(now())

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
  @@index([organizationId, role])
  @@index([organizationId, status])
  @@map("user_organizations")
}
