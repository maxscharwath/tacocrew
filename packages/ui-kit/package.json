{
  "name": "@tacobot/ui-kit",
  "version": "1.0.0",
  "description": "Shared UI component library for TacoBot",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=browser --target=esnext --format=esm --outfile=dist/index.js --packages=external && tsc",
    "check": "tsc --noEmit",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
